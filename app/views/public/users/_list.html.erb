<div class="row">
  <div class="col-md-8 offset-md-2">
    <div class="row">
       <% users.each do |user| %>
        <div class="card col-md-12 mx-auto py-3 shadow-lg">
          <div class="row">
            <div class="col-2">
              <%= link_to user_path(user.id), class:"text-decoration-none" do %>
                <%= image_tag user.get_profile_image(50,50), class: "rounded-circle" %>
              <% end %>
            </div>

            <div class="col-10">
              <%= link_to user.name, user_path(user.id) %><br />
              <%= user.profile %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>