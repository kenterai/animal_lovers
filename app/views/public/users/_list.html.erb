<div class="row">
  <div class="col-md-8 offset-md-2">
    <table class="table table-hover">
    　<tbody>
    　  <% users.each do |user| %>
    　		<tr>
    　			<td><%= image_tag user.get_profile_image(38,38), class: "rounded-circle" %></td>
    　			<td>
    　			  <%= link_to user.name, user_path(user.id) %>
    　		  </td>
    　			<td><%= user.profile %></td>
    　		</tr>
    　	<% end %>
    　</tbody>
    </table>
  </div>
</div>