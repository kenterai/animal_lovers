<div class="container">
  <h2>新規会員登録</h2><br />

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "public/shared/error_messages", resource: resource %>

    <div class="field">
      <%= f.label :name, "名前" %><br />
      <%= f.text_field :name, autofocus: true, autocomplete: "name", size: 40 %>
    </div><br />

    <div class="field">
      <%= f.label :email, "メールアドレス" %><br />
      <%= f.email_field :email, autocomplete: "email", size: 40 %>
    </div><br />

    <div class="field">
      <%= f.label :password, "パスワード（６文字以上）" %><br />
      <%= f.password_field :password, autocomplete: "new-password", size: 40 %>
    </div><br />

    <div class="field">
      <%= f.label :password_confirmation, "パスワード（確認用）" %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password", size: 40 %>
    </div><br />

    <div class="actions">
      <%= f.submit "新規登録", class: "btn btn-success" %>
    </div>
  <% end %><br />

  <p>
    会員の方は
    <%= link_to "こちら", new_user_session_path %>から
  </ps>
</div>
