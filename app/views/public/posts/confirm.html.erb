<div class="container">
  <h2>投稿情報確認</h2><br />

  <%= form_with model: @post, url: posts_path, method: :post, local:true do |f| %>

    <div class="field">
      <%= f.label :image, "投稿画像" %><br />
      <%= image_tag @post.image %>
      <%= f.hidden_field :image, value: @post.image %>
    </div><br />

    <div class="field">
      <%= f.label :text, "テキスト" %><br />
      <%= @post.text %>
      <%= f.hidden_field :text, value: @post.text %>
    </div><br />

    <div class="field">
    	<%= f.label :category_id, "カテゴリ" %><br />
    	<%= @post.category.name %>
			<%= f.hidden_field :category_id, value: @post.category_id %>
    </div><br />

    <div class="actions">
      <%= f.submit "投稿", class: "btn btn-success" %>
    </div>
  <% end %>
</div>

