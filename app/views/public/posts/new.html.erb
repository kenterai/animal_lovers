<div class="container">
  <h2>投稿フォーム</h2><br />

  <%= form_with model: @post, url: posts_path, method: :post, local:true do |f| %>
    <%= render "public/shared/error_messages", resource: @post %>

    <div class="field">
      <%= f.label :image, "投稿画像" %><br />
      <%= f.file_field :image, accept: "image/*" %>
    </div><br />

    <div class="field">
      <%= f.label :text, "テキスト" %><br />
      <%= f.text_area :text, autocomplete: "text", size: "40x5" %>
    </div><br />

    <div class="field">
    	<%= f.label :category_id, "カテゴリ" %><br />
			<%= f.collection_select :category_id, Category.all, :id, :name, include_blank: "--選択して下さい--　　　　　　　　　　　　" %>
    </div><br />

    <div class="actions">
      <%= f.submit "投稿", class: "btn btn-primary" %>
    </div>
  <% end %>
</div>
