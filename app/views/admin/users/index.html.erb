<div class="container">
  <h2>会員一覧</h2><br />

  <div class="row">
    <div class="col-md-8 offset-md-2">
      <div class="row">
         <% @users.each do |user| %>
          <div class="card col-md-12 mx-auto py-3 shadow-lg">
            <div class="row">
              <div class="col-2">
                <%= link_to admin_user_path(user.id), class:"text-decoration-none" do %>
                  <%= image_tag user.get_profile_image(50,50), class: "rounded-circle" %>
                <% end %>
              </div>

              <div class="col-10">
                <%= link_to user.name, admin_user_path(user.id) %><br />
                <%= user.email %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
 </div>
