<div class="container">
  <h2>会員詳細</h2><br />

  <div class="row">
    <div class="col-md-3">
      <%= image_tag @user.get_profile_image(150,150), class: "rounded-circle" %><br /><br />

      <h4 class="font-weight-bold"><%= @user.name %></h4>

      <h5><%= @user.profile %></h5>

      <%= "#{@user.followings.count} フォロー" %>　<%= "#{@user.followers.count} フォロワー" %>

      <div class="row">
        <%= link_to edit_admin_user_path, class: "btn btn-outline-secondary btn-block" do %>
        　<i class="fas fa-user-cog"></i>
        <% end %>
      </div><br />
    </div>

    <div class="col-md-8 offset-md-1">
      <h2 class="text-center"><%= @user.name %>さんの投稿</h2><br />

      <div class="row">
        <% @posts.each do |post| %>
          <div class="card col-md-9 mx-auto pt-3 mb-4 shadow-lg">
            <%= link_to admin_post_path(post.id), class:"text-dark text-decoration-none" do %>
              <%= image_tag post.image, class:"card-img-top" %>

              <div class="card-body">
                <h2 class="font-weight-bold text-center">
                  <%= post.text %>
                </h2>

                <%= link_to admin_post_path(post.id), class:"d-block text-right" do %>
                　<strong><span><%= post.favorites.count %> いいね <%= post.post_comments.count %> コメント</span></strong>
                <% end %>
              </div>
            <% end %>
          </div>
        <% end %>
      </div>
      <%= paginate @posts %>
    </div>
  </div>
</div>