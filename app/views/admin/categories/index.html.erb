<div class="container">
  <h2>カテゴリ一覧・追加</h2><br />

  <%= form_with model: @category, url: admin_categories_path, method: :post, local:true do |f| %>
    <div class="field">
      <%= f.label :name, "カテゴリ名", class: "font-weight-bold" %><br />
      <%= f.text_field :name, autofocus: true %>
      <%= f.submit "新規登録", class: "btn btn-success ml-3" %>
    </div>
  <% end %><br /><br />

  <div class="row">
    <div class="col-md-4">
      <table class="table">
        <thead class="bg-light">
          <tr>
            <th colspan="2">カテゴリ</th>
          </tr>
        </thead>

        <tbody>
          <% @categories.each do |category| %>
          <tr>
            <td><%= category.name %></td>
            <td>
              <%= link_to '編集する',edit_admin_category_path(category.id),class:"btn btn-success" %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>