<div class="container">
  <h2>投稿詳細</h2><br />

  <div class="row">
    <div class="card col-md-6 mx-auto pt-3 shadow-lg">

      <%= image_tag @post.image, class:"card-img-top" %>

      <div class="card-body">
        <h2 class="font-weight-bold text-center">
          <%= @post.text %>
        </h2>

        <div class="text-right">
          <%= link_to admin_user_path(@post.user.id) do %>
            <strong><span><i class="fas fa-user"></i> By <%= @post.user.name %></span></strong>
          <% end %><br />

          <span>♡<%= @post.favorites.count %> <strong>いいね</strong></span>
        </div>
      </div>
    </div>
  </div><br />

  <div class="row">
    <div class="mx-auto">
      <%= link_to "削除する", admin_post_path(@post.id), method: :delete, "data-confirm" => "OKを押すと削除処理がされます。本当によろしいですか？", class: "btn btn-danger" %>
    </div>
  </div><br />

  <div class="row">
    <div class="col-md-8 offset-md-2">
      <div class="row">
        <% @post.post_comments.order('id DESC').each do |post_comment| %>
          <div class="card col-md-9 mx-auto py-3 shadow-lg">
            <div class="row">
              <div class="col-2">
                <%= link_to admin_user_path(post_comment.user.id), class:"text-decoration-none" do %>
                  <%= image_tag post_comment.user.get_profile_image(50,50), class: "rounded-circle" %>
                <% end %>
              </div>

              <div class="col-10">
                <%= link_to admin_user_path(post_comment.user.id) do %>
                  <%= post_comment.user.name %>
                <% end %>
              　<%= post_comment.created_at.strftime('%Y/%m/%d') %>
                <%= link_to "削除", admin_post_post_comment_path(post_comment.post.id,post_comment.id), method: :delete, "data-confirm" => "OKを押すと削除処理がされます。本当によろしいですか？", class: "btn btn-danger" %><br />
                <%= post_comment.comment %>
	            </div>
	          </div>
	        </div>
        <% end %>
      </div>
    </div>
　</div><br />
</div>
